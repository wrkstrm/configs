{
  "tasks": [
    {
      "command": "swiftlint",
      "group": {
        "isDefault": true,
        "kind": "build"
      },
      "label": "SwiftLint",
      "options": {
        "cwd": "${workspaceFolder}" // Adjust if SwiftLint is in a different directory
      },
      "presentation": {
        "clear": true,
        "close": true,
        "echo": true,
        "focus": true,
        "panel": "shared",
        "reveal": "always",
        "showReuseMessage": true
      },
      "problemMatcher": [],
      "type": "shell"
    },
    {
      "args": ["build", "-diagnostic-style=llvm"],
      "cwd": "${workspaceFolder:configs}/zshwift",
      "detail": "swift build -Xswiftc -diagnostic-style=llvm",
      "disableTaskQueue": true,
      "env": {
        "DEVELOPER_DIR": "/Applications/Xcode-beta.app"
      },
      "group": {
        "isDefault": true,
        "kind": "build"
      },
      "label": "swift: Build Debug zshwift (zshwift)",
      "problemMatcher": [],
      "showBuildStatus": "swiftStatus",
      "type": "swift"
    }
  ],
  "version": "2.0.0"
}
